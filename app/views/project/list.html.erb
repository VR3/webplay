<div class="row" data-no-turbolink>
	<div class="col m4">
	</div>
	<div class="col m8">
		<% if @projects > 0 %>
			<% @projects.each do |project| %>
				<%= link_to project do %>
				<div class="card z-depth-2">
					<div class="card-image waves-effect waves-block waves-light">
						<%= image_tag project.image %>
					</div>
					<div class="card-content grey-text text-darken-4">
						<h5><%= project.name %></h5>
						<hr>
						<%= project.content %>
					</div>
				</div>
				<% end %>
			<% end %>
		<% else %>
			<div class="center">
				<h5>No tienes proyectos a√∫n. <%= link_to "Ver proyectos activos", root_path %></h5>
			</div>
		<% end %>
	</div>
</div>