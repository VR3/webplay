<div class="row">
	<div class="col m6 offset-m3 center">
		<h5>Reestablecer Contraseña</h5>

		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		  <%= render partial: "partials/devisemsg" %>

		  <div class="input-field">
		    <%= f.email_field :email, :id => "email", :placeholder => "Correo electrónico", autofocus: true %>
		  </div>

		  <button class="btn waves-effect waves-light" type="submit" name="action">Reestablecer Contraseña</button>
		<% end %>

	</div>
</div>