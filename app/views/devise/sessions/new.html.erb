<h2>Iniciar Sesión</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render partial: "partials/devisemsg" %>

  <div class="input-field">
    <%= f.email_field :email, autofocus: true, :class => "validate", :placeholder => "Correo Electrónico" %>
  </div>

  <div class="input-field">
    <%= f.password_field :password, autocomplete: "off", :class => "validate", :placeholder => "Contraseña" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <button class="btn waves-effect waves-light" type="submit" name="action">Iniciar Sesión</button>
  <%= link_to "Olvidé mi contraseña", new_user_password_path, :class => "btn waves-effect waves-light" %>

  <hr>

  <%= link_to "Iniciar Sesión con Facebook", user_facebook_omniauth_authorize_path, class: "btn blue darken-1" %>
<% end %>
