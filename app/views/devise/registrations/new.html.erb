      <div class="input-field">
        <%= f.text_field :name, autofocus: true, :class => "validate", :placeholder => "Nombre" %>
      </div>

      <div class="input-field">
        <%= f.email_field :email, autofocus: true, :class => "validate", :placeholder => "Correo ElectrÃ³nico" %>
      </div>

      <div class="input-field">
        <%= f.password_field :password, autocomplete: "off", :class => "validate", :placeholder => "ContraseÃ±a" %>
      </div>

      <!--div class="input-field">
